{
  "namespace": "more_edit_options_mcjava",

  "more_edit_options_screen_content_panel": {
    "type": "panel",
    "controls": [
      {
        "more_edit_options@more_edit_options_mcjava.more_edit_options_content_panel": {
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "game_settings_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      { "game_settings@more_create_options_mcjava.game_settings": {} }
    ]
  },

  "more_edit_options_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [ 0, 19 ], "text": "Edit World" } },
      { "content@more_edit_options_mcjava.more_edit_options_content": {} }
    ]
  },

  "more_edit_options_content": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [310, 195],
    "offset": [0, "-36%"],
    "controls": [
      {
        "panel_zero@common_mcjava.panel": {
          "size": ["100%", 35],
          "controls": [
            { "world_seed@more_edit_options_mcjava.world_seed_box": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": { "size": [0, 10] } },
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "experimental_gameplay@more_create_options_mcjava.experimental_gameplay_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "no_cheats_world_type@more_create_options_mcjava.no_cheats_world_type_panel": {} },
            { "cheats_enabled_world_type@more_create_options_mcjava.cheats_enabled_world_type_panel": {} }
          ]
        }
      },
      { "experimental_gameplay_info@more_create_options_mcjava.experimental_gameplay_info_panel": {} },
      { "space_one@common_mcjava.vspace": { "size": [0, 21] } },
      {
        "stack_one@common_mcjava.stack": {
          "controls": [
            { "allow_cheats@more_create_options_mcjava.allow_cheats_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "game_settings@more_create_options_mcjava.game_settings_button": {} }
          ]
        }
      },
      { "allow_cheats_info@more_create_options_mcjava.allow_cheats_info_panel": {} },
      { "space_two@common_mcjava.vspace": { "size": [0, 8] } },
      {
        "panel_one@common_mcjava.panel": {
          "controls": [
            { "back@world_create_mcjava.back_button": { "$toggle_button_name": "more_edit_options" } }
          ]
        }
      }
    ]
  },

  "world_seed_box@text_input_mcjava.text_input_with_label": {
    "$tts_section_header": "createWorldScreen.worldPreferences",
    "ignored": "($education_edition or not $is_seeds_enabled)",
    "$input_label": "selectWorld.enterSeed",
    "$input_binding_name": "#world_seed",
    "$input_enabled_binding_name": "#world_seed_enabled",
    "$text_input_name": "world_seed_text_box"
  }
}