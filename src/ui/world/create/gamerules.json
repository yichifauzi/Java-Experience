  "category": {
    "type": "panel",
    "size": ["100%", 28],
    "controls": [
      {
        "category_text": {
          "type": "label",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "text": "$category_text",
          "color": [1, 1, 0.333],
          "offset": [0, 8],
          "shadow": true,
          "layer": 10
        }
      }
    ]
  },

  "bottom_content": {
    "type": "panel",
    "size": [200, 32],
    "controls": [
      {
        "back@world_create_ui.back_button": {
          "offset": [0, -0.5],
          "$toggle_button_name": "gamerules",
          "variables": [
            {
              "requires": "(not $is_pregame)",
              "$toggle_button_name": "game_settings"
            }
          ]
        }
      }
    ]
  },

  /* Gamerule Toggle Structure */

  "gamerule_toggle_state_panel": {
    "type": "panel",
    "$tooltip_name|default": "null",
    "controls": [
      {
        "tooltip@tooltip_ui.tooltip": {
          "visible": "($state = checked_hover or $state = unchecked_hover or $state = checked_locked_hover or $state = unchecked_locked_hover)",
          "ignored": "($tooltip_name = null)"
        }
      },
      {
        "content_panel": {
          "type": "stack_panel",
          "size": ["100%", 20],
          "orientation": "horizontal",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "layer": 3,
          "controls": [
            {
              "label": {
                "type": "panel",
                "size": [176, "100%"],
                "controls": [
                  {
                    "label": {
                      "type": "label",
                      "color": "$text_color",
                      "size": ["default", 10],
                      "text": "$option_toggle_text",
                      "offset": [1, 4],
                      "anchor_from": "top_left",
                      "anchor_to": "top_left"
                    }
                  }
                ]
              }
            },
            {
              "toggle": {
                "type": "panel",
                "size": [44, "100%"],
                "controls": [
                  { "bg@$toggle_bg": { "size": [44, 20] } },
                  {
                    "state": {
                      "type": "label",
                      "color": "$text_color",
                      "size": ["default", 10],
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "text": "$option_toggle_state_text",
                      "shadow": true,
                      "layer": 4
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}