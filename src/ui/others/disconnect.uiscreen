{
  "namespace": "disconnect_ui",

  "disconnect_screen_content_panel": {
    "type": "panel",
    "$button_panel|default": "disconnect_ui.disconnect_button_panel",
    "controls": [
      { "title_panel@disconnect_ui.title_panel": {} },
      { "gamepad_helpers@disconnect.gamepad_helpers": {} },
      { "$button_panel@$button_panel": {} }
    ]
  },

  "realms_disconnect_screen_content_panel@disconnect_ui.disconnect_screen_content_panel": { "$button_panel": "disconnect_ui.realms_disconnect_button_panel" },

  "realms_warning_screen_content_panel@disconnect_ui.disconnect_screen_content_panel": { "$button_panel": "disconnect_ui.realms_warning_button_panel" },

  "title_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      { "disconnect_title_text@disconnect_ui.disconnect_title_text": {} },
      { "disconnect_text@disconnect_ui.disconnect_text": {} }
    ]
  },

  "disconnect_button_panel": {
    "type": "panel",
    "size": [310, 20],
    "anchor_to": "center",
    "anchor_from": "center",
    "controls": [ { "ok@disconnect_ui.ok_button": {} } ]
  },

  "realms_disconnect_button_panel": {
    "type": "panel",
    "size": [310, 20],
    "anchor_to": "center",
    "anchor_from": "center",
    "$right_size|default": [150, 20],
    "$right_anchor|default": "top_right",
    "variables": [
      {
        "requires": "($is_holographic or $nx_os or $is_berwick)",
        "$right_size": [200, 20],
        "$right_anchor": "center"
      }
    ],
    "controls": [
      {
        "check_store@disconnect_ui.check_store_button": {
          "size": [150, 20],
          "anchor_to": "top_left",
          "anchor_from": "top_left"
        }
      },
      {
        "ok@disconnect_ui.ok_button": {
          "size": "$right_size",
          "anchor_to": "$right_anchor",
          "anchor_from": "$right_anchor"
        }
      }
    ]
  },

  "realms_warning_button_panel": {
    "type": "panel",
    "size": [310, 20],
    "anchor_to": "center",
    "anchor_from": "center",
    "$right_size|default": [150, 20],
    "$right_anchor|default": "top_right",
    "variables": [
      {
        "requires": "($is_holographic or $nx_os or $is_berwick)",
        "$right_size": [200, 20],
        "$right_anchor": "center"
      }
    ],
    "controls": [
      {
        "check_store@disconnect_ui.check_store_button": {
          "size": [150, 20],
          "anchor_to": "top_left",
          "anchor_from": "top_left"
        }
      },
      {
        "ok@disconnect_ui.continue_button": {
          "size": "$right_size",
          "anchor_to": "$right_anchor",
          "anchor_from": "$right_anchor"
        }
      }
    ]
  },

  "disconnect_screen_text": {
    "type": "label",
    "color": "$loading_text_color",
    "max_size": ["100% - 20px", 50],
    "offset": "$title_text_offset",
    "$title_text_offset|default": [0, "-18%"],
    "size": ["70%", 50],
    "$title_text_anchor|default": "center",
    "$title_text_alignment|default": "center",
    "anchor_to": "$title_text_anchor",
    "anchor_from": "$title_text_anchor",
    "text_alignment": "$title_text_alignment",
    "layer": 12,
    "shadow": true
  },

  "disconnect_text@disconnect_ui.disconnect_screen_text": {
    "$title_text_offset": [0, "-18% + 28px"],
    "text": "#disconnect_text",
    "bindings": [
      { "binding_name": "#disconnect_text" },
      {
        "binding_name": "#tts_dialog_body",
        "binding_condition": "once"
      }
    ],
    "property_bag": { "#tts_dialog_body": "#disconnect_text" }
  },

  "disconnect_title_text@disconnect_ui.disconnect_screen_text": {
    "size": ["default", 10],
    "text": "#title_text",
    "bindings": [
      { "binding_name": "#title_text" },
      {
        "binding_name": "#tts_dialog_title",
        "binding_condition": "once"
      }
    ],
    "property_bag": { "#tts_dialog_title": "#title_text" }
  },

  "button_template@button_ui.button": {
    "anchor_to": "center",
    "anchor_from": "center"
  },

  "continue_button@disconnect_ui.button_template": {
    "$pressed_button_name": "button.menu_continue",
    "$button_text": "gui.continue"
  },

  "check_store_button@disconnect_ui.button_template": {
    "$pressed_button_name": "button.menu_check_store",
    "$button_text": "gui.store",
    "ignored": "($is_holographic or $nx_os or $is_berwick)"
  },

  "exit_button@disconnect_ui.button_template": {
    "$pressed_button_name": "button.menu_leave_screen",
    "$button_text": "gui.back"
  },
  
  "ok_button@disconnect_ui.button_template": {
    "$pressed_button_name": "button.menu_leave_screen",
    "$button_text": "gui.ok"
  }
}