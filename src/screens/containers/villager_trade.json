{
  "namespace": "villager_trade_mcjava",

  "villager_trade_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "container_gamepad_helpers@helper_mcjava.container_gamepad_helpers": {} },
      {
        "flying_item_renderer@common.flying_item_renderer": {
          "ignored": "$ignore_flying_item_renderer_on_touch",
          "layer": 8,
          "bindings": [
            {
              "binding_name": "#using_touch",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "root_panel@common.root_panel": {
          "layer": 1,
          "controls": [
            { "background@villager_trade_mcjava.villager_trade_container_bg": {} },
            {
              "trade_inventory": {
                "type": "panel",
                "controls": [
                  { "villager_trade_content@villager_trade_mcjava.villager_trade_content_panel": {} },
                  { "inventory_grid_panel@container_mcjava.inventory_grid_panel": {} },
                  { "hotbar_grid@container_mcjava.hotbar_grid": {} },
                  { "inventory_selected_icon_button@container_mcjava.inventory_selected_icon_button": {} },
                  { "gamepad_cursor@common.gamepad_cursor_button": {} }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "villager_trade_content_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "50%" ],
    "layer": 1,
    "controls": [
      {
        "villager_name_label": {
          "type": "label",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 6],
          "color": [0.25, 0.25, 0.25],
          "layer": 10,
          "text": "$villager_name"
        }
      },
      { "cycle_panel@villager_trade_mcjava.cycle_content_panel": {} },
      { "merchant_purchase_panel@villager_trade_mcjava.merchant_purchase_content_panel": {} }
    ]
  },

  "cycle_content_panel": {
    "type": "panel",
    "size": [142, 19],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [0, 23],
    "controls": [
      { "left@villager_trade_mcjava.cycle_recipe_left_button": {} },
      { "right@villager_trade_mcjava.cycle_recipe_right_button": {} }
    ]
  },

  "merchant_purchase_panel": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [106, 18],
    "offset": [0, 52],
    "controls": [
      { "purchase_grid@villager_trade_mcjava.purchase_grid": {} }
    ]
  },

  /* Content */

  /* Images */

  "villager_trade_container_bg@common_mcjava.image": {
    "$texture_src": "assets/minecraft/textures/gui/container/villager",
    "size": [176, 166],
    "uv": [0, 0],
    "variables": [
      { "requires": "($resolution = 256x)", "$1": [176, 166] },
      { "requires": "($resolution = 512x)", "$1": [352, 332] },
      { "requires": "($resolution = 1024x)", "$1": [704, 664] },
      { "requires": "($resolution = 2048x)", "$1": [1408, 1328] },
      { "requires": "($resolution = 4096x)", "$1": [2816, 2656] },
      { "requires": "($resolution = 8192x)", "$1": [5632, 5312] }
    ]
  },

  "cycle_recipe_button@button_mcjava.button": {
    "size": [12, 19],
    "$button_bg_src": "assets/minecraft/textures/gui/container/villager",
    "$button_old_bg_src": "assets/minecraft/textures/gui/container/villager",
    "$bg_uv_size": [12, 19],
    "$button_content": "common_store.direction_button_panel",
    "bindings": [
      {
        "binding_type": "global",
        "binding_condition": "visible",
        "binding_name": "$cycle_binding_name",
        "binding_name_override": "#enabled"
      },
      {
        "binding_name": "(not #is_using_gamepad)",
        "binding_name_override": "#focus_enabled"
      }
    ]
  },

  "cycle_recipe_left_button@villager_trade_mcjava.cycle_recipe_button": {
    "$bg_default_uv": [176, 19],
    "$bg_hover_uv": [188, 19],
    "$bg_locked_uv": [200, 19],
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "$cycle_binding_name": "#left_button_enabled",
    "$pressed_button_name": "button.cycle_recipe_left",
    "$direction_gamepad_button_helper": "gamepad_helper@common.gamepad_helper_left_bumper",
    "button_mappings": [
      {
        "from_button_id": "button.menu_tab_left",
        "to_button_id": "button.cycle_recipe_left",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.cycle_recipe_left",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.cycle_recipe_left",
        "mapping_type": "pressed"
      }
    ]
  },

  "cycle_recipe_right_button@villager_trade_mcjava.cycle_recipe_button": {
    "$bg_default_uv": [176, 0],
    "$bg_hover_uv": [188, 0],
    "$bg_locked_uv": [200, 0],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "$cycle_binding_name": "#right_button_enabled",
    "$pressed_button_name": "button.cycle_recipe_right",
    "$direction_gamepad_button_helper": "gamepad_helper@common.gamepad_helper_right_bumper",
    "button_mappings": [
      {
        "from_button_id": "button.menu_tab_right",
        "to_button_id": "button.cycle_recipe_right",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.cycle_recipe_right",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.cycle_recipe_right",
        "mapping_type": "pressed"
      }
    ]
  },

  "purchase_grid": {
    "type": "grid",
    "size": [ "100%", "100%" ],
    "grid_dimensions": [ 4, 1 ],
    "controls": [
      {
        "grid_slot1@villager_trade_mcjava.purchase_grid_item": {
          "grid_position": [ 0, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "$top_item": "villager_trade_mcjava.recipe_item_panel",
          "$bottom_item": "villager_trade_mcjava.trade_item_slot",
          "$recipe_collection": "trade_item_A",
          "$trade_ingredient_collection": "trade_ingredient1_items",
          "$focus_id": "trade_item_A_button_focus_id",
          "$focus_override_left": "trade_item_A_button_focus_id",
          "$focus_override_up": "trade_item_A_button_focus_id",
          "$focus_binding_type_right": "collection"
        }
      },
      { "space_zero@common_mcjava": { "size": [4, 0] } },
      {
        "grid_slot2@villager_trade_mcjava.purchase_grid_item": {
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "grid_position": [ 1, 0 ],
          "$top_item": "villager_trade_mcjava.recipe_item_panel",
          "$bottom_item": "villager_trade_mcjava.trade_item_slotB",
          "$recipe_collection": "trade_item_B",
          "$trade_ingredient_collection": "trade_ingredient2_items",
          "$focus_id": "trade_item_B_button_focus_id",
          "$focus_override_left": "trade_item_A_button_focus_id",
          "$focus_override_right": "sell_item_button_focus_id",
          "$focus_override_up": "trade_item_B_button_focus_id"
        }
      },
      {
        "arrow@villager_trade_mcjava.purchase_grid_item": {
          "grid_position": [ 2, 0 ],
          "$top_item": "trade.arrow",
          "$bottom_item": "trade.arrow"
        }
      },
      { "space_zero@common_mcjava": { "size": [4, 0] } },
      {
        "result_item_slot@villager_trade_mcjava.purchase_grid_item": {
          "grid_position": [ 3, 0 ],
          "$cell_image_size": [ 26, 26 ],
          "$cell_overlay_ref": "trade.greyed_item_panel",
          "$top_item": "villager_trade_mcjava.recipe_item_panel",
          "$bottom_item": "villager_trade_mcjava.trade_item_slot_result",
          "$recipe_collection": "sell_item",
          "$trade_ingredient_collection": "trade_result_item",
          "$focus_id": "sell_item_button_focus_id",
          "$focus_override_right": "sell_item_button_focus_id",
          "$focus_override_up": "sell_item_button_focus_id",
          "$focus_binding_type_left": "collection"
        }
      }
    ]
  },

  "purchase_grid_item": {
    "type": "panel",
    "size": [18, 47],
    "controls": [
      {
        "grid_item": {
          "type": "stack_panel",
          "orientation": "vertical",
          "$padding|default": [ 0, 11 ],
          "controls": [
            { "top_item@$top_item": {} },
            {
              "padding": {
                "type": "panel",
                "size": "$padding"
              }
            },
            { "bottom_item@$bottom_item": {} }
          ]
        }
      }
    ]
  },

  "recipe_item_panel": {
    "type": "panel",
    "size": [ 26, 26 ],
    "$item_collection_name": "$recipe_collection",
    "$stack_count_required|default": true,
    "controls": [
      {
        "item_renderer@common.item_renderer": {
          "size": [ 16, 16 ],
          "layer": 1,
          "bindings": [
            {
              "binding_name": "#item_id_aux",
              "binding_condition": "visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
            }
          ],
          "controls": [
            {
              "stack_count_label@common.stack_count_label": {
                "layer": 2,
                "bindings": [
                  {
                    "binding_name": "#item_stack_count",
                    "binding_name_override": "#inventory_stack_count",
                    "binding_condition": "visible",
                    "binding_type": "collection",
                    "binding_collection_name": "$item_collection_name"
                  }
                ]
              }
            }
          ]
        }
      },
      { "recipe_button@recipe_button": {} }
    ]
  },

  "recipe_button": {
    "type": "button",
    "default_focus_precedence": 1,
    "hover_control": "hover",
    "pressed_control": "pressed",
    "layer": 1,
    "button_mappings": [
      {
        "to_button_id": "button.container_slot_hovered",
        "mapping_type": "pressed"
      }
    ],
    "controls": [
      { "hover@container_mcjava.highlight_hover_slot_panel": {} },
      { "pressed@container_mcjava.highlight_pressed_slot_panel": {} }
    ]
  },

  "trade_item_slot": {
    "type": "panel",
    "size": [18, 18],
    "$item_collection_name": "$trade_ingredient_collection",
    "controls": [
      {
        "container_item@container.container_slot": {
          "anchor_to": "center",
          "anchor_from": "center",
          "$focus_binding_name_left|default": "#trade_item_focus_override_left",
          "$focus_binding_type_left|default": "none",
          "$focus_binding_name_right|default": "#trade_item_focus_override_right",
          "$focus_binding_type_right|default": "none",
          "bindings": [
            {
              "binding_type": "$focus_binding_type_left",
              "binding_collection_name": "$trade_ingredient_collection",
              "binding_name": "$focus_binding_name_left",
              "binding_name_override": "#focus_change_left"
            },
            {
              "binding_type": "$focus_binding_type_right",
              "binding_collection_name": "$trade_ingredient_collection",
              "binding_name": "$focus_binding_name_right",
              "binding_name_override": "#focus_change_right"
            }
          ]
        }
      }
    ]
  },

  "trade_item_slotB@trade_item_slot": {
    "bindings": [
      {
        "binding_name": "#show_second_trade_slot",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "trade_item_slot_result_button@container_mcjava.container_slot_button_prototype": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.trade_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.trade_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "button.trade_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "button.trade_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_auto_place",
        "to_button_id": "button.container_auto_place",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "button.container_auto_place",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id": "button.drop_one",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id": "button.drop_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.trade_coalesce_stack",
        "mapping_type": "double_pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.trade_coalesce_stack",
        "mapping_type": "double_pressed"
      },
      {
        "to_button_id": "button.container_slot_hovered",
        "mapping_type": "pressed"
      }
    ]
  },

  "trade_item_slot_result@trade_item_slot": {
    "$button_ref": "villager_trade_mcjava.trade_item_slot_result_button"
  }
}