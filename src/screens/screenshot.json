{
  "namespace": "screenshot_mcjava",

  "screenshot_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "text": "Screenshot" } },
      { "gamepad_helpers@feed_common.gamepad_helpers": {} },
      { "content_panel@screenshot_mcjava.content_panel": {} },
      {
        "close_button@button_mcjava.button": {
          "$pressed_button_name": "button.menu_exit",
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "offset": [0, "-5%"],
          "$button_text": "gui.done",
          "bindings": [
            {
              "binding_name": "(not #is_using_gamepad)",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "content_panel": {
    "type": "panel",
    "size": [300, 225],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [0, 32],
    "controls": [
      {
        "popup_content": {
          "type": "panel",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "layer": 1,
          "size": ["100%", "100%"],
          "controls": [
            {
              "new_post_share_post@screenshot_mcjava.new_post_share_post": {
                "size": [ "100%", 22 ],
                "offset": [ 0, "90%" ]
              }
            },
            {
              "screenshot_image@screenshot.screenshot_image": {
                "size": [ "100%", "75%" ],
                "offset": [ 0, 0 ],
                "layer": 10,
                "controls": [
                  {
                    "indentbox_bg@text_input_mcjava.indentbox_bg": {
                      "size": ["100% + 4px", "100% + 4px"],
                      "layer": -5
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "new_post_share_post": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": ["100% + 2px", 22],
    "controls": [
      {
        "share_text_box@text_input_mcjava.text_input": {
          "size": [202, 22],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "max_length": 350,
          "$alpha": 1,
          "$placeholder_text": "feed.whatup",
          "$text_input_name": "#caption_text_box",
          "bindings": [
            {
              "binding_name": "#caption_text_box"
            }
          ]
        }
      },
      {
        "share_button@button_mcjava.button": {
          "$pressed_button_name": "button.share_screenshot",
          "size": [80, 20],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "$button_text": "Share"
        }
      }
    ]
  }
}