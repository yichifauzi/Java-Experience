    "offset": [0, -51]
  },

  "creative_jukebox_popup_text@hotbar_ui.jukebox_text": {
    "offset": [0, -65]
  },

  "survival_jukebox_popup_text@hotbar_ui.jukebox_text": {
    "offset": [0, -65]
  },

  "creative_jukebox_above_interact_button_popup_text@hotbar_ui.jukebox_text": {
    "offset": [0, -42]
  },

  "survival_jukebox_above_interact_button_popup_text@hotbar_ui.jukebox_text": {
    "offset": [0, -42]
  },

  "hud_tip_text": {
    "type": "panel",
    "size": ["100%", 10],
    "clips_children": true,
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "offset": [0, -65],
    "controls": [
      {
        "item_text_label": {
          "type": "label",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "text_alignment": "center",
          "layer": 31,
          "color": "$iten_name_text_color",
          "text": "#text",
          "shadow": true,
          "alpha": "@hud.anim_item_name_text_alpha",
          "bindings": [
            {
              "binding_name": "#tip_text",
              "binding_name_override": "#text"
            }
          ]
        }
      }
    ]
  }
}