{
  "namespace": "crafting_mcjava",
  
  "inventory_screen_content_panel": {
    "type": "panel",
    "$creative_inv_content|default": "creative_inventory_mcjava.creative_inventory_screen_content_panel",
    "variables": [
      {
        "requires": "($creative_inventoy_style = java)",
        "$creative_inv_content": "new_creative_inventory_mcjava.creative_inventory_screen_content_panel"
      }
    ],
    "controls": [
      { "container_gamepad_helpers@container_mcjava.invisible_exit_background": {} },
      {
        "creative_mode@$creative_inv_content": {
          "bindings": [
            {
              "binding_type": "global",
              "binding_name": "#is_creative_mode",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "survival_mode@survival_inventory_mcjava.survival_inventory_screen_content_panel": {
          "bindings": [
            {
              "binding_type": "global",
              "binding_name": "(not #is_creative_mode)",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "base_screen_content_panel": {
    "type": "panel",
    "controls": [
      {
        "with_recipe_book": {
          "type": "panel",
          "size": [ 325, 166 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 10,
          "ignored": "($recipe_book = off)",
          "controls": [
            {
              "recipe_book@recipe_book_mcjava.recipe_book_content_panel": {
                "anchor_from": "top_left",
                "anchor_to": "top_left" 
              }
            },
            {
              "$specified_content@$specified_content": {
                "anchor_from": "top_right",
                "anchor_to": "top_right"
              }
            }
          ],
          "bindings": [
            {
              "binding_type": "global",
              "binding_name": "#is_survival_layout",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "without_recipe_book": {
          "type": "panel",
          "size": [ 176, 166 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 10,
          "controls": [
            { "$specified_content@$specified_content": {} }
          ],
          "bindings": [
            {
              "ignored": "($recipe_book = off)",
              "binding_type": "global",
              "binding_name": "#is_recipe_book_layout",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      { "inventory_take_progress_icon_button@container_mcjava.inventory_take_progress_icon_button": {} },
      { "inventory_selected_icon_button@container_mcjava.inventory_selected_icon_button": {} },
      { "hold_icon@container_mcjava.inventory_take_progress_icon_button": {} },
      {
        "controller_gamepad_helpers_stack_panel": {
          "type": "stack_panel",
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "controls": [
            { "container_gamepad_helpers_second_row@helper_mcjava.crafting_gamepad_helpers_second_row": {} },
            {
              "container_gamepad_helpers@helper_mcjava.container_gamepad_helpers": {
                "$helper_x_control": "helper_mcjava.inventory_x_gamepad_helper",
                "$helper_y_control": "helper_mcjava.inventory_y_gamepad_helper",
                "$helper_a_control": "helper_mcjava.inventory_a_gamepad_helper"
              }
            }
          ],
          "bindings": [
            {
              "ignored": "$force_render_helpers",
              "binding_name": "#gamepad_helper_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "flying_item_renderer@common.flying_item_renderer": {
          "ignored": "$ignore_flying_item_renderer_on_touch",
          "layer": 13,
          "bindings": [
            {
              "binding_name": "#using_touch",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "game_tip@game_tip.game_tip_panel": {
          "layer": 100,
          "$offset|default": [ 0, 110 ],
          "variables": [
            {
              "requires": "$game_pad",
              "$offset": [ 0, "38%" ]
            }
          ],
          "offset": "$offset"
        }
      }
    ]
  }
}