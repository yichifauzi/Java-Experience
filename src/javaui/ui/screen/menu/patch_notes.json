{
  "namespace": "patch_notes_mcjava",

  "patch_notes_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "title@screen_mcjava.title": { "text": "Patch Notes" } },
      { "content_panel@patch_notes_mcjava.content_panel": {} },
      { "bottom_content@patch_notes_mcjava.bottom_content": {} }
    ]
  },

  "content_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": ["100%", "100% - 83px"],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [0, 32],
    "layer": 20,
    "controls": [
      {
        "space_left@screen_mcjava.hspace": {
          "size": [40, 0]
        }
      },
      {
        "right_panel@patch_notes_mcjava.right_panel": {
          "type": "panel",
          "size": [222, "100%"]
        }
      },
      {
        "space@screen_mcjava.hspace": {
          "size": [8, 0]
        }
      },
      {
        "selection_content_panel@resource_packs_mcjava.side_content_panel": {
          "size": ["fill", "100%"],
          "$scroll_bar_offset": ["50% - 6px", 0],
          "$scrolling_content": "patch_notes_mcjava.scrolling_content"
        }
      },
      {
        "space_right@screen_mcjava.hspace": {
          "size": [40, 0]
        }
      }
    ]
  },

  "right_panel": {
    "type": "panel",
    "size": [222, "100%"],
    "controls": [
      {
        "patch_main_image": {
          "type": "image",
          "size": ["100% - 2px", "56.25%x"],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "bindings": [
            {
              "binding_name": "#main_image_texture",
              "binding_name_override": "#texture",
              "binding_type": "global"
            },
            {
              "binding_name": "#main_image_texture_source",
              "binding_name_override": "#texture_file_system",
              "binding_type": "global"
            }
          ]
        }
      }
    ]
  },

  "scrolling_content": {
    "type": "panel",
    "size": ["100% - 8px", "100%c + 8px"],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "patch_notes_text": {
          "type": "label",
          "color": "$body_text_color",
          "size": ["100% - 6px", "default"],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [0, 4],
          "shadow": true,
          "text": "#patch_description",
          "bindings": [
            {
              "binding_name": "#patch_description",
              "binding_type": "global"
            },
            {
              "binding_type": "global",
              "binding_condition": "once",
              "binding_name": "#tts_dialog_body"
            }
          ],
          "property_bag": {
            "#tts_dialog_body": "#patch_description"
          }
        }
      }
    ]
  },

  "bottom_content": {
    "type": "panel",
    "size": [200, 20],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "offset": [0, -8],
    "controls": [
      { "continue_button@continue_button": {} }
    ]
  },
  
  "continue_button@button_mcjava.button": {
    "$button_text": "patchNotes.continue",
    "$pressed_button_name": "button.menu_exit",
    "$button_focus_precedence": 1
  }
}