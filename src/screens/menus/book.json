{
  "namespace": "book_mcjava",

  "book_screen_content_panel": {
    "type": "panel",
    "controls": [
      {
        "root_panel@book.root_panel": {
          "$book_size": ["146px", "180px"],
          // "$book_size": ["292px", "180px"],
          "$page_size": ["146px", "180px"],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            {
              "book_and_buttons_panel@book_mcjava.book_and_buttons_panel": {
                "bindings": [
                  {
                    "binding_name": "#viewing",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "cover_and_buttons_panel@book_mcjava.cover_and_buttons_panel": {
                "bindings": [
                  {
                    "binding_name": "#signing",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "pick_panel@book.pick_panel": {
                "bindings": [
                  {
                    "binding_name": "#picking",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "export_progress@progress.modal_progress_panel_no_cancel": {
                "$modal_screen_size": [ 204, 140 ],
                "bindings": [
                  {
                    "binding_name": "#exporting",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "gamepad_helper_a@helper_mcjava.gamepad_helper_a": {
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left"
              }
            },
            {
              "gamepad_helper_b@helper_mcjava.gamepad_helper_b": {
                "anchor_from": "bottom_right",
                "anchor_to": "bottom_right"
              }
            }
          ]
        }
      }
    ]
  },

  "book_and_buttons_panel": {
    "type": "panel",
    "size": [292, 213],
    "anchor_from": "top_middle",
    "offset": [0, 3],
    "anchor_to": "top_middle",
    "controls": [
      {
        "book_panel": {
          "type": "panel",
          "size": "$book_size",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "controls": [
            { "book_grid@book_mcjava.book_grid": {} },
            { "prev_button@book_mcjava.prev_button": {} },
            { "next_button@book_mcjava.next_button": {} }
          ]
        }
      },
      {
        "book_buttons_panel@book_mcjava.book_buttons_panel": {
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle"
        }
      }
    ]
  },
  
  "book_buttons_panel": {
    "type": "panel",
    "size": [246, 20],
    "controls": [
      {
        "editable": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [200, 20],
          "controls": [
            {
              "sign_button@button_mcjava.button": {
                "$pressed_button_name": "button.sign_book",
                "$button_text": "book.signButton",
                "size": [98, 20]
              }
            },
            { "space": { "type": "panel", "size": [4, 0] } },
            { "exit@common_mcjava.exit_button": { "size": [98, 20] } }
          ],
          "bindings": [
            {
              "binding_name": "#editable",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "not_editable": {
          "type": "panel",
          "size": [200, 20],
          "ignored": "$education_edition",
          "controls": [
            { "exit@common_mcjava.exit_button": { "size": [200, 20] } }
          ],
          "bindings": [
            {
              "binding_name": "(not #editable)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "not_editable_education_edition": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [200, 20],
          "ignored": "(not $education_edition)",
          "controls": [
            {
              "export_button@button_mcjava.button": {
                "$pressed_button_name": "button.export_book",
                "$button_text": "Export",
                "size": [98, 20]
              }
            },
            { "space": { "type": "panel", "size": [4, 0] } },
            { "exit@common_mcjava.exit_button": { "size": [98, 20] } }
          ],
          "bindings": [
            {
              "binding_name": "(not #editable)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "im_content_button@button_mcjava.button": {
          "ignored": "(not $education_edition)",
          "$button_text": "Immersive Reader",
          "$pressed_button_name": "button.immersive_reader",
          "size": [ 200, 20 ],
          "offset": [0, 24]
        }
      }
    ]
  },

  "cover_and_buttons_panel": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [146, 213],
    "offset": [0, 3],
    "controls": [
      {
        "cover_panel": {
          "type": "panel",
          "size": "$page_size",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "controls": [
            { "cover_content_panel@book_mcjava.cover_content_panel": {} },
            { "@book_mcjava.book_bg": {} }
          ]
        }
      },
      {
        "sign_book_buttons@book_mcjava.sign_book_buttons": {
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle"
        }
      }
    ]
  },

  "cover_content_panel": {
    "type": "panel",
    "controls": [
      { "title_label@book_mcjava.title_label": {} },
      { "title_text_box@book_mcjava.title_text_box": {} },
      { "author_text_box@book_mcjava.author_label": {} },
      { "author_text_box@book_mcjava.author_text_box": {} },
      { "warning_label@book_mcjava.warning_label": {} }
    ]
  },

  /* Content */

   /* Images */

   "book_bg@common_mcjava.image": {
    "texture": "assets/minecraft/textures/gui/book",
    "size": [146, 180],
    "variables": "$book_background_resol"
  },

  "prev_button_default@common_mcjava.image": {
    "texture": "assets/minecraft/textures/gui/book",
    "size": [18, 10],
    "variables": "$book_prev_button_default_resol"
  },

  "prev_button_hover@common_mcjava.image": {
    "texture": "assets/minecraft/textures/gui/book",
    "size": [18, 10],
    "variables": "$book_prev_button_hover_resol"
  },

  "next_button_default@common_mcjava.image": {
    "texture": "assets/minecraft/textures/gui/book",
    "size": [18, 10],
    "variables": "$book_next_button_default_resol"
  },

  "next_button_hover@common_mcjava.image": {
    "texture": "assets/minecraft/textures/gui/book",
    "size": [18, 10],
    "variables": "$book_next_button_hover_resol"
  },

  /* #Ended */

  "base_button@common.button": {
    "layer": 5,
    "$button_bind_type": "global",
    "bindings": [
      {
        "binding_name": "$button_active",
        "binding_name_override": "#visible",
        "binding_type": "$button_bind_type",
        "binding_collection_name": "book_pages"
      },
      {
        "binding_type": "collection_details",
        "binding_collection_name": "book_pages"
      }
    ],
    "controls": [
      { "default@$bg_default_src": {} },
      { "hover@$bg_hover_src": {} },
      { "pressed@$bg_hover_src": {} }
    ]
  },

  "book_grid": {
    "type": "stack_panel",
    "collection_name": "book_pages",
    "$anchor": "top_right",
    "$numbers_offset": [-17, 15],
    "$textbox_offset": [-16, 29],
    "controls": [
      {
        "page_panel_left@book_mcjava.left_page_panel": {
          "collection_index": 0,
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "next_page_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "page_panel_right@book_mcjava.right_page_panel": {
          "collection_index": 1,
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "next_page_view",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },

  "left_page_panel": {
    "type": "panel",
    "size": "$page_size",
    "$page_content_offset|default": [ 0, 0 ],
    "controls": [
      { "page_content_panel@book_mcjava.page_content_panel": {} },
      { "@book_mcjava.book_bg": {} },
      { "@book_mcjava.toggle_next_button": {} }
    ]
  },

  "right_page_panel": {
    "type": "panel",
    "size": "$page_size",
    "$page_content_offset|default": [ 0, 0 ],
    "controls": [
      { "page_content_panel@book_mcjava.page_content_panel": {} },
      { "@book_mcjava.book_bg": {} },
      { "@book_mcjava.toggle_prev_button": {} }
    ]
  },

  "toggle_prev_button@toggle_mcjava.toggle_button": {
    "layer": 40,
    "size": [ 18, 10 ],
    "offset": [29, -12 ],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "$toggle_index": 0,
    "$toggle_button_name": "pages_bitch",
    "$toggle_control_name": "next_page_view",
    "$sound_name": "item.book.page_turn",
    "$bg_unchecked_src": "book_mcjava.prev_button_default",
    "$bg_checked_src": "book_mcjava.prev_button_default",
    "$bg_checked_hover_src": "book_mcjava.prev_button_hover",
    "$bg_unchecked_hover_src": "book_mcjava.prev_button_hover"
  },

  "toggle_next_button@toggle_mcjava.toggle_button": {
    "layer": 40,
    "size": [ 18, 10 ],
    "offset": [ -29, -12],
    "$toggle_index": 1,
    /* "$toggle_default_state": true, */
    "$toggle_button_name": "pages_bitch",
    "$toggle_control_name": "next_page_view",
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "$sound_name": "item.book.page_turn",
    "$bg_unchecked_src": "book_mcjava.next_button_default",
    "$bg_checked_src": "book_mcjava.next_button_default",
    "$bg_unchecked_hover_src": "book_mcjava.next_button_hover",
    "$bg_checked_hover_src": "book_mcjava.next_button_hover",
    "bindings": [
      {
        "binding_name": "#next_page_button_active",
        "binding_name_override": "#visible",
        "binding_type": "global",
        "binding_collection_name": "book_pages"
      },
      {
        "binding_type": "collection_details",
        "binding_collection_name": "book_pages"
      }
    ]
  },

  "page_content_panel": {
    "type": "panel",
    "offset": "$page_content_offset",
    "controls": [
      { "page_text@book_mcjava.page_text": {} },
      { "page_photo@book.page_photo": {} },
      { "page_number_label@book_mcjava.page_number_label": {} }
      /* { "page_buttons_panel@book.page_buttons_panel": {} }, */
      /* {
        "edit_page@book.base_button": {
          "size": [ 13, 12 ],
          "offset": [ 0, -16 ],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",

          "$pressed_button_name": "button.edit_page",
          "$button_active": "#edit_button_active",
          "$button_bind_type": "collection",
          "$default_texture": "textures/ui/book_edit_default",
          "$hover_texture": "textures/ui/book_edit_hover",
          "$pressed_texture": "textures/ui/book_edit_pressed"
        }
      } */
    ],
    "bindings": [
      {
        "binding_name": "#page_visible",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "book_pages"
      }
    ]
  },

  "page_number_label": {
    "type": "label",
    "offset": "$numbers_offset",
    "layer": 5,
    "color": "$book_page_number_text_color",
    "anchor_from": "$anchor",
    "anchor_to": "$anchor",
    "localize": false,
    "text": "#page_number",
    "bindings": [
      {
        "binding_name": "#page_number",
        "binding_type": "collection",
        "binding_collection_name": "book_pages"
      },
      {
        "binding_type": "collection_details",
        "binding_collection_name": "book_pages"
      }
    ]
  },

  "page_text_edit@common.multiline_text_edit_box": {
    "layer": 4,
    "$text_box_text_color": "$book_page_text_color",
    "$color": "$book_page_text_color",
    "$disabled_alpha": 1.0,
    "constrain_to_rect": true,
    "$text_edit_box_content_binding_type": "collection",
    "$text_edit_box_grid_collection_name": "book_pages",
    "$text_box_enabled_binding_name": "#editable",
    "$text_box_name": "#page_text_box",
    "$text_background_default": "book.blank",
    "$text_edit_box_content_binding_name": "#text_box_item_name",
    "$text_background_hover": "book.blank",
    "$text_edit_box_focusable_binding_name": "#editable",
    "$enable_profanity_filter": true
  },

  "page_text@book_mcjava.page_text_edit": {
    "size": [ 113, 124 ],
    "offset": "$textbox_offset",
    "anchor_from": "$anchor",
    "anchor_to": "$anchor",
    "$text_edit_box_focusable_binding_name": "#editable",
    "max_length": "$max_page_length",
    "$text_edit_visible_binding_name": "#is_text_page",
    "$text_edit_visible_binding_collection_name": "book_pages",
    "$text_edit_visible_binding_type|default": "collection",
    "$enable_profanity_filter": true
  },

  "prev_button@book_mcjava.base_button": {
    "size": [ 18, 10 ],
    "offset": [29, -12 ],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "sound_name": "item.book.page_turn",
    "sound_volume": 4.0,
    "sound_pitch": 1.0,
    "$pressed_button_name": "button.prev_page",
    "$button_active": "#prev_page_button_active",
    "$bg_default_src": "book_mcjava.prev_button_default",
    "$bg_hover_src": "book_mcjava.prev_button_hover"/* ,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "next_page_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ] */
  },

  "next_button@book_mcjava.base_button": {
    "size": [ 18, 10 ],
    "offset": [ -29, -12],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "sound_name": "item.book.page_turn",
    "sound_volume": 4.0,
    "sound_pitch": 1.0,
    "$pressed_button_name": "button.next_page",
    "$button_active": "#next_page_button_active",
    "$bg_default_src": "book_mcjava.next_button_default",
    "$bg_hover_src": "book_mcjava.next_button_hover"/* ,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "next_page_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ] */
  },

  "title_label": {
    "type": "label",
    "offset": [ 0, 30 ],
    "layer": 2,
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "text": "book.editTitle",
    "color": "$book_title_text_color",
    "bindings": [
      {
        "binding_name": "#editable",
        "binding_name_override": "#visible"
      }
    ]
  },

  "title_text_box@common.text_edit_box": {
    "size": [ 120, 12 ],
    "offset": [ 0, 44 ],
    "layer": 2,
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "max_length": "$max_title_length",
    "$text_alignment": "center",
    "$place_holder_text": "-",
    "$text_box_text_color": "$book_title_text_color",
    "$place_holder_text_color": "gray",
    "$color": "$book_title_text_color",
    "$text_box_name": "#title_text_box",
    "$text_box_enabled_binding_name": "#editable",
    "$text_edit_box_content_binding_name": "#title_text_box_item_name",
    "$text_background_default": "book.blank",
    "$text_background_hover": "book.blank",
    "$enable_profanity_filter": true
  },
  
  "author_label": {
    "type": "label",
    "size": [ "default", 10 ],
    "offset": [ 0, 56 ],
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "text": "book.byAuthor",
    "layer": 10,
    "color": "$book_author_text_color"
  },

  "author_text_box@common.text_edit_box": {
    "size": ["100%", 12],
    "offset": [0, 67 ],
    "layer": 3,
    "constrain_to_rect": true,
    "$text_alignment": "center",
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "$text_box_text_color": "$book_author_text_color",
    "$color": "$book_author_text_color",
    "$text_box_name": "#author_text_box",
    "$text_box_enabled_binding_name": "#author_editable",
    "$text_edit_box_content_binding_name": "#author_text_box_item_name",
    "$text_background_default": "book.blank",
    "$text_background_hover": "book.blank",
    "$enable_profanity_filter": true
  },

  "warning_label": {
    "type": "label",
    "offset": [ 16, 85],
    "size": [100, "100%" ],
    "layer": 2,
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "text": "book.finalizeWarning",
    "text_alignment": "left",
    "color": "$book_warning_text_color",
    "bindings": [
      {
        "binding_name": "#editable",
        "binding_name_override": "#visible"
      }
    ]
  },

  "sign_book_buttons": {
    "type": "panel",
    "size": [200, 20],
    "controls": [
      {
        "cover_buttons_stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [200, 20],
          "controls": [
            {
              "sign_book_button@button_mcjava.button": {
                "$pressed_button_name": "button.finalize",
                "$button_text": "book.finalizeButton",
                "size": [98, 20],
                "bindings": [
                  {
                    "binding_name": "#finalize_button_enabled",
                    "binding_name_override": "#enabled"
                  }
                ]
              }
            },
            {
              "padding_1": {
                "type": "panel",
                "size": [ 4, 0 ]
              }
            },
            {
              "cancel_sign_button@button_mcjava.button": {
                "size": [98, 20],
                "$pressed_button_name": "button.book_exit",
                "$button_text": "gui.cancel"
              }
            }
          ]
        }
      }
    ]
  }
}