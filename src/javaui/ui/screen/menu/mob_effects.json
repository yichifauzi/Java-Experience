{
  "namespace": "mob_effects_mcjava",

  "mob_effects_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "content_panel@mob_effects_mcjava.mob_effects_content_panel": {} }
    ]
  },

  "mob_effects_content_panel": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [310, "100% - 96px"],
    "offset": [0, 32],
    "controls": [
      {
        "scrolling_panel@scrolling_mcjava.scrolling_panel": {
          "size": [310, "100% - 40px"],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "$scroll_bar_offset": [120, 0],
          "$scroll_clip_path": true,
          "$scrolling_content": "mob_effects_mcjava.mob_effect_grid_panel",
          "$always_handle_scrolling": true
        }
      },
      { "exit@mob_effects_mcjava.cancel_button": {} }
    ]
  },

  "mob_effect_grid_panel": {
    "type": "panel",
    "size": [310, "100%c"],
    "controls": [
      { "mob_effect_grid@mob_effects_mcjava.mob_effect_grid": {} }
    ]
  },

  "mob_effect_grid": {
    "type": "grid",
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "size": [310, "default"],
    "grid_item_template": "mob_effects_mcjava.mob_effect_grid_item",
    "grid_dimension_binding": "#mob_effect_grid_size",
    "collection_name": "mob_effects_collection",
    "bindings": [
      {
        "binding_name": "#mob_effect_grid_size"
      }
    ]
  },

  "mob_effect_grid_item": {
    "type": "panel",
    "size": [310, 31],
    "controls": [
      {
        "mob_effect_grid_item": {
          "type": "panel",
          "size": [120, 31],
          "controls": [
            { "bg@resources_mcjava.effect_gray_background": {} },
            {
              "name@mob_effects_mcjava.effect_name": {
                "layer": 1
              }
            },
            {
              "timer@mob_effects_mcjava.effect_timer": {
                "layer": 1
              }
            },
            {
              "icon@mob_effects_mcjava.effect_icon": {
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },

  "effect_name": {
    "type": "label",
    "shadow": true,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [28, 6],
    "text_alignment": "left",
    "text": "#mob_effect_name",
    "color": "white",
    "bindings": [
      {
        "binding_type": "collection",
        "binding_name": "#mob_effect_name",
        "binding_collection_name": "mob_effects_collection",
        "binding_condition": "visible"
      }
    ]
  },

  "effect_timer": {
    "type": "label",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [28, 15],
    "text": "#mob_effect_timer",
    "color": "$dark_button_secondary_default_text_color",
    "text_alignment": "left",
    "bindings": [
      {
        "binding_type": "collection",
        "binding_name": "#mob_effect_timer",
        "binding_collection_name": "mob_effects_collection",
        "binding_condition": "always_when_visible"
      }
    ]
  },

  "effect_icon": {
    "type": "image",
    "size": [18, 18],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [6, 7],
    "texture": "#texture",
    "bindings": [
      {
        "binding_type": "collection",
        "binding_name": "#texture",
        "binding_collection_name": "mob_effects_collection",
        "binding_condition": "visible"
      }
    ]
  },

  "cancel_button@button_mcjava.button": {
    "$button_text": "gui.done",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "$pressed_button_name": "button.menu_continue"
  }
}