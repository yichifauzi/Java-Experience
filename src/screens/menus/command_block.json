{
  "namespace": "command_block_mcjava",

  "command_block_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "title@command_block_mcjava.title_text": {} },
      { "menu@command_block_mcjava.menu_content_panel": {} },
      { "advanced_menu@command_block_mcjava.advanced_menu_content_panel": {} },
      {
        "stack@common_mcjava.stack": {
          "size": [308, 20],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [0, "75%"],
          "controls": [
            { "done@common_mcjava.exit_button": { "size": [150, 20] } },
            { "fill@common_mcjava.hfill": {} },
            { "cancel@command_block_mcjava.cancel_button": {} }
          ]
        }
      }
    ]
  },

  "menu_content_panel": {
    "type": "stack_panel",
    "size": [308, "100%c"],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [0, 39],
    "controls": [
      { "console_title@command_block_mcjava.base_label": { "$text": "advMode.command" } },
      {
        "panel_zero@common_mcjava.panel": {
          "size": [308, 22],
          "controls": [
            { "console@command_block_mcjava.command_block_console": {} },
            { "plus@command_block_mcjava.plus_button": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": { "size": [0, 52] } },
      {
        "space_one@common_mcjava.vspace": {
          "size": [0, 10],
          "bindings": [
            {
              "binding_name": "(not #track_output_binding)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "output_title@command_block_mcjava.base_label": {
          "$text": "advMode.previousOutput",
          "bindings": [
            {
              "binding_name": "#track_output_binding",
              "binding_name_override": "#visible"
            }
          ]
        } 
      },
      {
        "panel_one@common_mcjava.stack": {
          "size": [308, 22],
          "controls": [
            { "space_left@common_mcjava.vspace": { "size": [2, 0] } },
            { "output@command_block_mcjava.command_output": {} },
            { "fill@common_mcjava.hfill": {} },
            {
              "show_output": {
                "type": "panel",
                "size": [20, 22],
                "controls": [
                  { "output@command_block_mcjava.show_output_toggle": {} }
                ]
              }
            },
            { "space_right@common_mcjava.vspace": { "size": [3, 0] } }
          ]
        }
      },
      { "space_two@common_mcjava.vspace": { "size": [0, 8] } },
      {
        "panel_two@common_mcjava.stack": {
          "controls": [
            { "block_type@command_block_mcjava.block_type_panel": {} },
            { "fill@common_mcjava.hfill": {} },
            { "condition@command_block_mcjava.condition_panel": {} },
            { "fill@common_mcjava.hfill": {} },
            { "redstone_signal@command_block_mcjava.redstone_panel": {} }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "(not #maximized_input_visible)",
        "binding_name_override": "#visible"
      }
    ]
  },

  "advanced_menu_content_panel": {
    "type": "stack_panel",
    "size": [308, "100%c"],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [0, 39],
    "controls": [
      { "console_title@command_block_mcjava.base_label": { "$text": "advMode.command" } },
      {
        "panel_zero@common_mcjava.panel": {
          "size": [308, 80],
          "controls": [
            { "@command_block_mcjava.maximized_command_block_console": {} },
            { "@command_block_mcjava.minimze_button": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": { "size": [0, 5] } },
      {
        "panel_one@common_mcjava.panel": {
          "size": [308, 22],
          "controls": [
            { "@command_block_mcjava.hover_note_text": {} }
          ]
        }
      },
      { "space_one@common_mcjava.vspace": { "size": [0, 8] } },
      {
        "stack@common_mcjava.stack": {
          "size": [308, 22],
          "controls": [
            { "tick_delay@command_block_mcjava.tick_delay_text": {} },
            { "fill@common_mcjava.hfill": {} },
            {
              "panel": {
                "type": "panel",
                "size": [152, 22],
                "controls": [
                  { "execute_on_first_tick@command_block_mcjava.execute_on_first_tick_toggle": {} }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#maximized_input_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  /* Content */

  "title_text@common_mcjava.title": {
    "offset": [ 0, 19 ],
    "text": "advMode.setCommand"
  },

  "base_label": {
    "type": "panel",
    "size": ["100%", 10],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "text@common_mcjava.title": {
          "offset": [2, 0 ],
          "color": "$header_information_text_color",
          "text": "$text",
          "text_alignment": "$text_alignment",
          "$text_alignment|default": "left",
          "anchor_from": "$text_anchor",
          "$text_anchor|default": "top_left",
          "anchor_to": "$text_anchor"
        }
      }
    ]
  },

  "plus_button@button_mcjava.button": {
    "size": [20, 20],
    "layer": 1,
    "$button_text": "+",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [310, 1],
    "$pressed_button_name": "command_block.input_maximize"
  },

  "minimze_button@button_mcjava.button": {
    "size": [20, 20],
    "layer": 1,
    "offset": [310, 1],
    "$button_text": "-",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$pressed_button_name": "command_block.input_minimize"
  },
  
  "command_block_multiline_text_edit_box@text_input_mcjava.multiline_text_input": {
    "$text_color": [0.49, 0.49, 0.49],
    "$cancel_button_id|default": "button.menu_cancel",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_select",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "$cancel_button_id",
        "handle_select": false,
        "handle_deselect": true,
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_autocomplete",
        "to_button_id": "button.chat_autocomplete",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_autocomplete_back",
        "to_button_id": "button.chat_autocomplete_back",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "global"
      }
    ]
  },

  "command_block_multiline_textbox@command_block_mcjava.command_block_multiline_text_edit_box": {
    "enabled_newline": false,
    "bindings": [
      {
        "binding_name": "#maximized_input_visible",
        "binding_name_override": "#enabled"
      }
    ]
  },

  "command_block_textbox@text_input_mcjava.text_input": {
    "$text_color": [0.49, 0.49, 0.49],
    "$text_offset": [1, 0],
    "$cancel_button_id|default": "button.menu_cancel",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_select",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "$cancel_button_id",
        "handle_select": false,
        "handle_deselect": true,
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_autocomplete",
        "to_button_id": "button.chat_autocomplete",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_autocomplete_back",
        "to_button_id": "button.chat_autocomplete_back",
        "handle_select": true,
        "handle_deselect": false,
        "mapping_type": "global"
      }
    ],
    "bindings": [
      {
        "binding_name": "(not #maximized_input_visible)",
        "binding_name_override": "#enabled"
      }
    ]
  },

  "command_block_console@command_block_mcjava.command_block_textbox": {
    "$focus_id": "command_block_commands_text",
    "focus_change_left": "hover_note_text",
    "focus_change_up": "hover_note_text",
    "size": [304, 22],
    "max_length": 32500,
    "$text_input_name": "command_block.command_text",
    "$text_input_content_binding_name": "#command_text_edit"
  },

  "maximized_command_block_console@command_block_mcjava.command_block_multiline_textbox": {
    "layer": 17,
    "size": [304, 80],
    "max_length": 32500,
    "$text_input_name": "command_block.command_text",
    "$text_input_content_binding_name": "#command_text_edit",
    "$cancel_button_id": "command_block.input_minimize"
  },

  "command_output@text_input_mcjava.text_input": {
    "size": [ 281, 22 ],
    "focus_enabled": false,
    "$text_input_name": "command_block.output_text",
    "max_length": 32500,
    "$text_input_content_binding_name": "#command_output_text",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "handle_select": false,
        "handle_deselect": false,
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_ok",
        "handle_select": false,
        "handle_deselect": false,
        "mapping_type": "focused"
      },
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_cancel",
        "handle_select": false,
        "handle_deselect": false,
        "mapping_type": "global"
      }
    ],
    "bindings": [
      {
        "binding_name": "#track_output_binding",
        "binding_name_override": "#visible"
      }
    ]
  },

  "hover_note_text@text_input_mcjava.text_input": {
    "size": [304, 22],
    "$focus_id": "hover_note_text",
    "layer": 5,
    "max_length": 15,
    "$text_input_name": "command_block.hover_note_textbox",
    "$text_input_content_binding_name": "#command_hover_note",
    "$placeholder_text": "commandBlockScreen.hoverNote"
  },

  "show_output_toggle@toggle_mcjava.toggle": {
    "$show_argument": false,
    "$state_checked_text": "X",
    "$state_unchecked_text": "O",
    "size": [ 20, 20 ],
    "$focus_id": "show_output_toggle",
    "$toggle_binding_name": "#track_output_binding",
    "$toggle_enabled_binding_name": "#close_button_visible_binding_name",
    "$toggle_name": "track_output"
  },

  "block_type_panel@button_mcjava.radio_group_panel": {
    "size": [100, 20],
    "$options_enabled": "#block_type_dropdown_enabled",
    "controls": [
      {
        "infinite@button_mcjava.radio_group_button": {
          "size": [100, 20],
          "$radio_button_text": "advMode.mode.redstone",
          "$this_action": "#command_impulse_mode",
          "$next_action": "#command_repeat_mode"
        }
      },
      {
        "flat@button_mcjava.radio_group_button": {
          "size": [100, 20],
          "$radio_button_text": "advMode.mode.auto",
          "$this_action": "#command_repeat_mode",
          "$next_action": "#command_chain_mode"
        }
      },
      {
        "flat@button_mcjava.radio_group_button": {
          "size": [100, 20],
          "$radio_button_text": "advMode.mode.sequence",
          "$this_action": "#command_chain_mode",
          "$next_action": "#command_impulse_mode"
        }
      }
    ]
  },

  "condition_panel@button_mcjava.radio_group_panel": {
    "size": [100, 20],
    "$options_enabled": "#condition_dropdown_enabled",
    "controls": [
      {
        "infinite@button_mcjava.radio_group_button": {
          "size": [100, 20],
          "$radio_button_text": "advMode.mode.conditional",
          "$this_action": "#command_conditional_mode",
          "$next_action": "#command_unconditional_mode"
        }
      },
      {
        "flat@button_mcjava.radio_group_button": {
          "size": [100, 20],
          "$radio_button_text": "advMode.mode.unconditional",
          "$this_action": "#command_unconditional_mode",
          "$next_action": "#command_conditional_mode"
        }
      }
    ]
  },

  "redstone_panel@button_mcjava.radio_group_panel": {
    "size": [100, 20],
    "$options_enabled": "#redstone_dropdown_enabled",
    "controls": [
      {
        "infinite@button_mcjava.radio_group_button": {
          "size": [100, 20],
          "$radio_button_text": "advMode.mode.redstoneTriggered",
          "$this_action": "#command_needs_redstone_mode",
          "$next_action": "#command_always_on_mode"
        }
      },
      {
        "flat@button_mcjava.radio_group_button": {
          "size": [100, 20],
          "$radio_button_text": "advMode.mode.autoexec.bat",
          "$this_action": "#command_always_on_mode",
          "$next_action": "#command_needs_redstone_mode"
        }
      }
    ]
  },

  "tick_delay_text@text_input_mcjava.text_input": {
    "size": [ 152, 22],
    "$focus_id": "tick_delay_text",
    "layer": 5,
    "$max_length": 5,
    "$text_input_text_type": "NumberChars",
    "$text_input_name": "command_block.tick_delay_textbox",
    "$text_input_content_binding_name": "#command_tick_delay"
  },

  "execute_on_first_tick_toggle@toggle_mcjava.toggle": {
    "size": [ 152, 20],
    "$toggle_text":"advMode.execOnFirstTick",
    "$toggle_binding_name": "#execute_on_first_tick",
    "$toggle_enabled_binding_name": "#execute_on_first_tick_enabled",
    "$toggle_name": "execute_on_first_tick",
    "$toggle_binding_condition": "visible"
  },

  "cancel_button@button_mcjava.button": {
    "$pressed_button_name": "button.menu_leave_screen",
    "size": [150, 20],
    "$button_text": "gui.cancel",
    "bindings": [
      {
        "binding_name": "#close_button_visible_binding_name",
        "binding_name_override": "#enabled"
      }
    ]
  }
}