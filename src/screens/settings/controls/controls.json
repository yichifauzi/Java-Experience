{
  "namespace": "controls_mcjava",

  "controls_content_panel": {
    "type": "panel",
    "layer": 50,
    "controls": [
      { "bg@common_mcjava.screen_background": { "alpha": 0.4 } },
      { "controls@controls_mcjava.controls_content": {} }
    ]
  },

  "controls_content": {
    "type": "input_panel",
    "size": ["100%", "100%"],
    "layer": 50,
    "controls": [
      {
        "mouse_exit@settings_mcjava.back_button": {
          "$toggle_button_name": "navigation_tab",
          "$sound_name": "",
          "offset": [0, "120%"],
          "size": [0, 0]
        }
      },
      {
        "content_panel": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "top_middle",
          "size": [ 310, 195],
          "offset": [ 0, "-36%" ],
          "controls": [
            { "space_top@common_mcjava.vspace": { "size": [0, 78] } },
            {
              "stack_zero@common_mcjava.stack": {
                "controls": [
                  { "fill@common_mcjava.hfill": {} },
                  { "@controls_mcjava.mouse_button": {} }
                ]
              }
            },
            { "space_zero@common_mcjava.vspace": {} },
            {
              "stack_one@common_mcjava.stack": {
                "controls": [
                  { "fill@common_mcjava.hfill": {} },
                  { "@controls_mcjava.controller_button": {} }
                ]
              }
            },
            { "space_one@common_mcjava.vspace": {} },
            {
              "stack_two@common_mcjava.stack": {
                "controls": [
                  { "fill@common_mcjava.hfill": {} },
                  { "@controls_mcjava.touch_button": {} }
                ]
              }
            }
          ]
        }
      }     
    ]
  },

  /* Controls */

  "mouse_button@toggle_mcjava.toggle_button": {
    "$toggle_index": 110,
    "$toggle_button_text": "options.mouse",
    "$toggle_button_name": "navigation_tab",
    "$toggle_control_name": "mouse_view"
  },

  "controller_button@toggle_mcjava.toggle_button": {
    "$toggle_index": 111,
    "$toggle_button_text": "options.controller",
    "$toggle_button_name": "navigation_tab",
    "$toggle_control_name": "controller_view"
  },

  "touch_button@toggle_mcjava.toggle_button": {
    "$toggle_index": 112,
    "$toggle_button_text": "options.touch",
    "$toggle_button_name": "navigation_tab",
    "$toggle_control_name": "touch_view"
  },

  "back_button@toggle_mcjava.toggle_button": {
    "$toggle_index": 99,
    "$toggle_button_text": "gui.done",
    "$toggle_button_name": "navigation_tab",
    "$toggle_control_name": "",
    "$cancel_mapping": true
  },

  "keys_title": {
    "type": "panel",
    "layer": 1,
    "size": [ "100%", 20 ],
    "controls": [
      {
        "label": {
          "type": "label",
          "color": "white",
          "shadow": true,
          "text_alignment": "center",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 1,
          "text": "$keys_title",
          "$keys_title|default": ""
        }
      }
    ]
  },

  "keymapping_grid_item@common_mcjava.grid_index_panel": {
    "size": ["100%", 20],
    "collection_name": "$keymapping_collection"
  }
}