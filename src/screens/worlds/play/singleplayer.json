{
  "namespace": "singleplayer_mcjava",

  "singleplayer_screen_content_panel@common_mcjava.scroll_screen": {
    "$screen": "singleplayer",
    "$top_content": "singleplayer_mcjava.top_content",
    "$scrolling_content": "singleplayer_mcjava.scroll_content",
    "$bottom_content": "singleplayer_mcjava.bottom_content",
    "$bottom_content_size": ["100%", 64],
    /* Reset Clipman */
    "$middle_clip_path": false,
    "$scroll_clip_path": false,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "multiplayer_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },

  "top_content": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "text": "selectWorld.title", "offset": [0, 20] } },
      { "right@play_mcjava.right_button": { "$toggle_button_name": "multiplayer", "$toggle_control_name": "multiplayer_view" } }
    ]
  },

  "scroll_content": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      { "space_top": { "type": "panel", "size": [0, 4] } },
      {
        "local_worlds": {
          "type": "stack_panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "local_worlds": {
                "type": "stack_panel",
                "size": [ "100%", 0 ],
                "controls": [
                  {
                    "local_worlds": {
                      "type": "stack_panel",
                      "size": [ "100%", "100%c"],
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "clips_children": true,
                      "controls": [
                        { "local_world_selection@singleplayer_mcjava.local_world_selection_panel": {} },
                        { "local_worlds_grid@singleplayer_mcjava.ghost_local_worlds_grid": {} }
                      ]
                    }
                  }
                ]
              }
            },
            { "local_worlds_grid@singleplayer_mcjava.local_worlds_grid": {} }
          ]
        }
      },
      {
        "legacy_worlds": {
          "type": "stack_panel",
          "size": [ "100%", "100%c" ],
          "clips_children": true,
          "controls": [
            {
              "local_worlds": {
                "type": "stack_panel",
                "size": [ "100%", 0 ],
                "controls": [
                  {
                    "local_worlds": {
                      "type": "stack_panel",
                      "size": [ "100%", "100%c"],
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "clips_children": true,
                      "controls": [
                        { "legacy_world_selection@singleplayer_mcjava.legacy_world_selection_panel": {} },
                        { "legacy_worlds_grid@singleplayer_mcjava.ghost_legacy_worlds_grid": {} }
                      ]
                    }
                  }
                ]
              }
            },
            { "legacy_worlds_grid@singleplayer_mcjava.legacy_worlds_grid": {} }
          ]
        }
      },
      { "space_bottom": { "type": "panel", "size": [0, 2] } }
    ]
  },
  
  "bottom_content": {
    "type": "input_panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ 310, 44],
    "offset": [0, -8],
    "controls": [
      { "local_world_play@singleplayer_mcjava.local_world_play_panel": {} },
      { "local_world_edit@singleplayer_mcjava.local_world_edit_panel": {} },
      { "legacy_world_play@singleplayer_mcjava.legacy_world_play_panel": {} },
      { "legacy_world_delete@singleplayer_mcjava.legacy_world_delete_panel": {} },
      { "play_selected_world_button_locked@singleplayer_mcjava.play_selected_world_button_locked": {} },
      { "edit_selected_world_button_locked@singleplayer_mcjava.edit_selected_world_button_locked": {} },
      { "delete_selected_world_button_locked@singleplayer_mcjava.delete_selected_world_button_locked": {} },
      { "create_new_world_button@singleplayer_mcjava.create_new_world_button": {} },
      { "import_world@singleplayer_mcjava.import_world_button": {} },
      { "cancel_button@singleplayer_mcjava.cancel_button": {} }
    ]
  },

  /* Content */

  "local_worlds_grid@play_mcjava.grid_template": {
    "$for_src": "assets/minecraft/textures/gui/world_selection",
    "$grid_dimension_binding": "#local_world_item_grid_dimension",
    "$collection_name": "local_worlds",
    "$grid_name": "local_worlds",
    "$from": "singleplayer"
  },

  "ghost_local_worlds_grid@play_mcjava.grid_template": {
    "$grid_dimension_binding": "#local_world_item_grid_dimension",
    "$collection_name": "local_worlds",
    "grid_item_template": "singleplayer_mcjava.ghost_item"
  },

  "ghost_item": {
    "type": "panel",
    "size": ["100%", 36],
    "layer": 0,
    "controls": [
      {
        "local_worlds_button@common.button": {
          "size": ["100%", 36],
          "focus_enabled": false,
          "focus_magnet_enabled": false,
          "variables": [
            {
              "requires": "($local_world_upload)",
              "$pressed_button_name": "button.local_world_upload"
            },
            {
              "requires": "(not $local_world_upload)",
              "$pressed_button_name": "button.menu_start_local_world"
            }
          ],
          "$pressed_button_name": "button.menu_start_local_world",
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "$pressed_button_name",
              "mapping_type": "double_pressed"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "$pressed_button_name",
              "mapping_type": "double_pressed"
            }
          ],
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "local_worlds"
            },
            {
              "binding_type": "collection",
              "binding_name": "#world_button_focus_identifier",
              "binding_name_override": "#focus_identifier",
              "binding_collection_name": "local_worlds"
            }
          ]
        }
      }
    ]
  },

  "legacy_worlds_grid@play_mcjava.grid_template": {
    "$for_src": "assets/minecraft/textures/gui/world_selection",
    "$grid_dimension_binding": "#legacy_world_item_grid_dimension",
    "$collection_name": "legacy_worlds",
    "$grid_name": "legacy_worlds",
    "$from": "singleplayer"
  },

  "ghost_legacy_worlds_grid@play_mcjava.grid_template": {
    "$grid_dimension_binding": "#legacy_world_item_grid_dimension",
    "$collection_name": "legacy_worlds",
    "grid_item_template": "singleplayer_mcjava.ghost_item"
  },

  /* World Icon Images */

  "local_worlds_icon_image@singleplayer_mcjava.collection_world_screenshot": {
    "$collection_binding_name": "local_worlds",
    "$image_binding_name": "#local_world_image",
    "$texture_source_binding_name": "#local_world_texture_source",
    "layer": 2
  },

  "legacy_worlds_icon_image@singleplayer_mcjava.collection_world_screenshot": {
    "$collection_binding_name": "legacy_worlds",
    "$image_binding_name": "#legacy_world_image",
    "$texture_source_binding_name": "#legacy_world_texture_source",
    "layer": 2
  },

  "collection_world_screenshot": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [32, 32],
    "$collection_binding_name|default": "",
    "$image_binding_name|default": "",
    "$texture_source_binding_name|default": "",
    "layer": 3,
    "controls": [
      {
        "screenshot_picture": {
          "type": "image",
          "layer": 1,
          "force_texture_reload": true,
          "size": [32, 32],
          "fill": true,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "bindings": [
            {
              "binding_name": "$image_binding_name",
              "binding_name_override": "#texture",
              "binding_type": "collection",
              "binding_collection_name": "$collection_binding_name"
            },
            {
              "binding_name": "$texture_source_binding_name",
              "binding_name_override": "#texture_file_system",
              "binding_type": "collection",
              "binding_collection_name": "$collection_binding_name"
            }
          ]
        }
      }
    ]
  },

  /* World Button */

  "local_worlds_button@play_mcjava.grid_button": {
    "variables": [
      {
        "requires": "($local_world_upload)",
        "$pressed_button_name": "button.local_world_upload"
      },
      {
        "requires": "(not $local_world_upload)",
        "$pressed_button_name": "button.menu_start_local_world"
      }
    ],
    "$pressed_button_name": "button.menu_start_local_world",
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "local_worlds"
      },
      {
        "binding_type": "collection",
        "binding_name": "#world_button_focus_identifier",
        "binding_name_override": "#focus_identifier",
        "binding_collection_name": "local_worlds"
      }
    ]
  },

  "legacy_worlds_button@play_mcjava.grid_button": {
    "$pressed_button_name": "button.convert_legacy_world",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "focused"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "button.upload_legacy_world",
        "mapping_type": "focused"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "button.upload_legacy_world",
        "mapping_type": "focused"
      }
    ],
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "legacy_worlds"
      }
    ]
  },

  /* World Names */

  "local_worlds_name_content": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "10px" ],
    "controls": [
      {
        "local_worlds_name_content@play.local_world_name": {
          "size": [ "fill", 10 ],
          "$text_color": "white",
          "layer": 1
        }
      }
    ]
  },

  "legacy_worlds_name_content": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "10px" ],
    "controls": [
      {
        "legacy_worlds_name_content@play.legacy_world_name": {
          "size": [ "fill", 10 ],
          "$text_color": "white",
          "layer": 1
        }
      }
    ]
  },

  /* World Descriptions */

  "local_worlds_description_content": {
    "layer": 4,
    "type": "stack_panel",
    "size": ["100%", 21],
    "orientation": "vertical",
    "controls": [
      {
        "top_panel": {
          "layer": 4,
          "type": "stack_panel",
          "size": ["100%", 10],
          "orientation": "horizontal",
          "controls": [
            {
              "local_world_name@play.local_world_name": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "comma@play_mcjava.desc_base": { "text": ", " } },
            { "par_left@play_mcjava.desc_base": { "text": "gui.parenteses.left" } },
            {
              "local_world_date@play.local_world_date": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "par_right@play_mcjava.desc_base": { "text": "gui.parenteses.right" } },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      },
      {
        "bottom_panel": {
          "layer": 4,
          "type": "stack_panel",
          "size": ["100%", 10],
          "orientation": "horizontal",
          "controls": [
            {
              "local_world_game_mode@play.local_world_game_mode": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "comma@play_mcjava.desc_base": { "text": ", " } },
            { "size@play_mcjava.desc_base": { "text": "Size: " } },
            {
              "local_world_filesize@play.local_world_filesize": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      }
    ]
  },

  "legacy_worlds_description_content": {
    "layer": 4,
    "type": "stack_panel",
    "size": ["100%", 21],
    "orientation": "vertical",
    "controls": [
      {
        "top_panel": {
          "layer": 4,
          "type": "stack_panel",
          "size": ["100%", 10],
          "orientation": "horizontal",
          "controls": [
            {
              "legacy_world_name@play.legacy_world_name": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "comma@play_mcjava.desc_base": { "text": ", " } },
            { "par_left@play_mcjava.desc_base": { "text": "gui.parenteses.left" } },
            {
              "legacy_world_date@play.legacy_world_date": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "par_right@play_mcjava.desc_base": { "text": "gui.parenteses.right" } },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      },
      {
        "bottom_panel": {
          "layer": 4,
          "type": "stack_panel",
          "size": ["100%", 10],
          "orientation": "horizontal",
          "controls": [
            {
              "legacy_world_game_mode@play.legacy_world_game_mode": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "comma@play_mcjava.desc_base": { "text": ", " } },
            { "size@play_mcjava.desc_base": { "text": "Size: " } },
            {
              "legacy_world_filesize@play.legacy_world_filesize": {
                "size": [ "default", 10 ],
                "color": [0.50, 0.50, 0.50],
                "layer": 1
              }
            },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      }
    ]
  },

  "create_new_world_button@button_mcjava.button": {
    "variables": [
      {
        "requires": "($local_world_upload)",
        "$pressed_button_name": "button.new_world_upload"
      },
      {
        "requires": "(not $local_world_upload)",
        "$pressed_button_name": "button.menu_local_world_create"
      }
    ],
    "size": [150, 20],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "$button_text": "selectWorld.create",
    "$focus_id": "create_world",
    "$focus_override_left": "play_selected_world",
    "$focus_override_right": "play_selected_world",
    "$focus_override_down": "cancel_btn",
    "$button_focus_precedence": 10
  },

  "play_selected_world_button_locked@common_mcjava.locked": {
    "size": [150, 20],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$button_text": "selectWorld.select"
  },

  "edit_selected_world_button_locked@common_mcjava.locked": {
    "size": [72, 20],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "$button_text": "selectWorld.edit"
  },

  "delete_selected_world_button_locked@common_mcjava.locked": {
    "size": [72, 20],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "offset": [78, 0],
    "$button_text": "selectWorld.delete"
  },

  "import_world_button@button_mcjava.button": {
    "variables": [
      {
        "requires": "($local_world_upload)",
        "$pressed_button_name": "button.archived_world_upload"
      },
      {
        "requires": "(not $local_world_upload)",
        "$pressed_button_name": "button.menu_import_level"
      }
    ],
    "size": [72, 20],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [-78, 0],
    "enabled": "$world_archive_support",
    "$button_text": "selectWorld.import"
  },

  "cancel_button@button_mcjava.button": {
    "size": [72, 20],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "$button_text": "gui.cancel",
    "$pressed_button_name": "button.menu_exit"
  },

  /* Selection */

  "local_world_selection_panel@play_mcjava.for_selection_more_panel": {
