{
  "namespace": "brewing_stand_mcjava",

  "brewing_stand_screen_content_panel@container_mcjava.base_panel": {
    "$container_bg": "brewing_stand_mcjava.brewing_stand_container_bg",
    "$specified_content": "brewing_stand_mcjava.brewing_stand_content_panel",
    "$texture_src": "assets/minecraft/textures/gui/container/brewing_stand"
  },

  "brewing_stand_content_panel": {
    "type": "panel",
    "controls": [
      { 
        "title@container_mcjava.title": { 
          "anchor_from": "top_middle", 
          "anchor_to": "top_middle", 
          "offset": [0, 5]
        }
      },
      { "arrow@brewing_stand_mcjava.arrow_full_image": {} },
      { "bubbles@brewing_stand_mcjava.bubbles_full_image": {} },
      { "fuel_bar@brewing_stand_mcjava.fuel_bar_full_image": {  } },
      { "input@brewing_stand_mcjava.input_item": {} },
      { "fuel@brewing_stand_mcjava.fuel_item": {} },
      { "output_panel@brewing_stand_mcjava.output_items_panel": {} }
    ]
  },

  "output_items_panel": {
    "type": "stack_panel",
    "size": [ 64, 25 ],
    "collection_name": "brewing_result_items",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 55, 50 ],
    "orientation": "horizontal",
    "controls": [
      {
        "left_offset": {
          "type": "panel",
          "size": [23, 25],
          "collection_index": 0,
          "controls": [
            {
              "output_grid_item1@brewing_stand_mcjava.output_item": {
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "$focus_override_left_binding_type": "none",
                "$focus_override_left": "brewing_fuel"
              }
            }
          ]
        }
      },
      {
        "center_offset": {
          "type": "panel",
          "size": [18, 25],
          "collection_index": 1,
          "controls": [
            {
              "output_grid_item2@brewing_stand_mcjava.output_item": {
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle"
              }
            }
          ]
        }
      },
      {
        "right_offset": {
          "type": "panel",
          "size": [23, 25],
          "collection_index": 2,
          "controls": [
            {
              "output_grid_item3@brewing_stand_mcjava.output_item": {
                "anchor_from": "top_right",
                "anchor_to": "top_right"
              }
            }
          ]
        }
      }
    ]
  },

  /* Content */

  /* Images */

  "brewing_stand_container_bg@common_mcjava.image": {
    "size": [176, 166],
    "uv": [0, 0],
    "variables": [
      { "requires": "($brewing_stand_resolution = 256x)", "$1": [176, 166] },
      { "requires": "($brewing_stand_resolution = 512x)", "$1": [352, 332] },
      { "requires": "($brewing_stand_resolution = 1024x)", "$1": [704, 664] },
      { "requires": "($brewing_stand_resolution = 2048x)", "$1": [1408, 1328] },
      { "requires": "($brewing_stand_resolution = 4096x)", "$1": [2816, 2656] }
    ]
  },

  "base_image@common_mcjava.image": {
    "layer": 3,
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "arrow_full_image@base_image": {
    "offset": [97, 16],
    "size": [9, 28],
    "clip_direction": "up",
    "variables": [
      { "requires": "($brewing_stand_resolution = 256x)", "$0": [176, 0], "$1": [9, 28] },
      { "requires": "($brewing_stand_resolution = 512x)", "$0": [352, 0], "$1": [18, 56] },
      { "requires": "($brewing_stand_resolution = 1024x)", "$0": [704, 0], "$1": [36, 112] },
      { "requires": "($brewing_stand_resolution = 2048x)", "$0": [1408, 0], "$1": [72, 224] },
      { "requires": "($brewing_stand_resolution = 4096x)", "$0": [2816, 0], "$1": [144, 448] }
    ],
    "bindings": [
      {
        "binding_name": "#brewing_arrow_ratio",
        "binding_name_override": "#clip_ratio",
        "binding_condition": "always"
      }
    ]
  },

  "bubbles_full_image@base_image": {
    "offset": [ 63, 14 ],
    "size": [ 12, 29 ],
    "clip_direction": "down",
    "variables": [
      { "requires": "($brewing_stand_resolution = 256x)", "$0": [185, 0], "$1": [12, 29] },
      { "requires": "($brewing_stand_resolution = 512x)", "$0": [370, 0], "$1": [24, 58] },
      { "requires": "($brewing_stand_resolution = 1024x)", "$0": [740, 0], "$1": [48, 116] },
      { "requires": "($brewing_stand_resolution = 2048x)", "$0": [1480, 0], "$1": [72, 224] },
      { "requires": "($brewing_stand_resolution = 4096x)", "$0": [2960, 0], "$1": [192, 464] }
    ],
    "bindings": [
      {
        "binding_name": "#brewing_bubbles_ratio",
        "binding_name_override": "#clip_ratio",
        "binding_condition": "always"
      }
    ]
  },

  "fuel_bar_full_image@base_image": {
    "offset": [ 60, 44 ],
    "size": [ 18, 4 ],
    "clip_direction": "left",
    "variables": [
      { "requires": "($brewing_stand_resolution = 256x)", "$0": [176, 29], "$1": [18, 4] },
      { "requires": "($brewing_stand_resolution = 512x)", "$0": [352, 58], "$1": [36, 8] },
      { "requires": "($brewing_stand_resolution = 1024x)", "$0": [704, 116], "$1": [72, 16] },
      { "requires": "($brewing_stand_resolution = 2048x)", "$0": [1408, 232], "$1": [144, 32] },
      { "requires": "($brewing_stand_resolution = 4096x)", "$0": [2816, 464], "$1": [288, 64] }
    ],
    "bindings": [
      {
        "binding_name": "#brewing_fuel_ratio",
        "binding_name_override": "#clip_ratio",
        "binding_condition": "always"
      }
    ]
  },

  /* #Ended */

  "input_item@container_mcjava.container_slot": {
    "offset": [ 78, 16 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$item_collection_name": "brewing_input_item",
    "$focus_left_binding_type": "none",
    "$focus_left": "brewing_fuel"
  },

  "fuel_item@container_mcjava.container_slot": {
    "offset": [ 16, 16 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$item_collection_name": "brewing_fuel_item",
    "$focus_id_binding_type": "none",
    "$focus_id": "brewing_fuel",
    "$focus_right_binding_type": "none",
    "$focus_right": "brewing_input_item0"
  },

  "output_item@container_mcjava.container_slot": {
    "$item_collection_name": "brewing_result_items"
  }
}