{
  "namespace": "world_create_ui",

  "world_create_screen_content_panel": {
    "type": "panel",
    "controls": [
      {
        "world_create@world_create_ui.world_create_content_panel": {
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "gamerules_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            },
            {
              "binding_type": "view",
              "source_control_name": "more_create_options_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            },
            {
              "binding_type": "view",
              "source_control_name": "world_resource_packs_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            },
            {
              "binding_type": "view",
              "source_control_name": "world_behavior_packs_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      { "more_create_options@world_create_ui.more_create_options_screen": {} },
      { "gamerules@world_create_ui.gamerules_screen": {} },
      { "resource_packs@world_create_ui.resource_packs_screen": {} },
      { "behavior_packs@world_create_ui.behavior_packs_screen": {} }
    ]
  },

  "world_create_content_panel": {
    "type": "panel",
    "controls": [
      {
        "title@screen_ui.title": {
          "offset": [0, 19],
          "text": "selectWorld.create"
        }
      },
      { "world_name@world_create_ui.world_name_box": { "offset": [0, 46] } },
      { "save_world_name_panel@world_create_ui.save_world_name_panel": { "offset": [1, 84] } },
      { "game_mode@world_create_ui.game_mode_panel": { "offset": [-80, 100] } },
      { "difficulty@settings_ui.difficulty_panel": { "anchor_from": "top_middle", "anchor_to": "top_middle", "offset": [80, 100] } },
      { "game_mode_info@world_create_ui.gamemode_info_panel": { "offset": [0, 121] } },
      { "@world_create_ui.gamerules_button": { "offset": [-80, 185] } },
      { "@world_create_ui.more_create_options_button": { "offset": [80, 185] } },
      { "@world_create_ui.resource_packs_button": { "offset": [-80, 151] } },
      { "@world_create_ui.behavior_packs_button": { "offset": [80, 151] } },
      {
        "create_world@world_create_ui.create_world_button": {
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "offset": [-80, -8]
        }
      },
      {
        "cancel@screen_ui.exit_button": {
          "$button_text": "gui.cancel",
          "size": [150, 20],
          "offset": [80, -8],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle"
        }
      }
    ]
  },

  "world_name_box@text_box_ui.text_box_with_label": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "$box_label": "selectWorld.enterName",
    "$option_binding_name": "#world_name",
    "$option_enabled_binding_name": "#world_name_enabled",
    "$text_box_name": "world_name_text_box",
    "$allow_data_binding": false
  },

  "world_name_boxview@world_name_saved": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "layer": 10,
    "$option_binding_name": "#world_name",
    "$option_enabled_binding_name": "#world_name_enabled",
    "$text_box_name": "world_name_text_box",
    "$focus_override_right": "FOCUS_OVERRIDE_STOP",
    "$allow_data_binding": false
  },

  "world_name_saved": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": ["100%", 10],
    "$place_holder_control": "text_box_ui.text_placeholder_label",
    "$text_color": [0.62, 0.62, 0.62],
    "$placeholder_text": "New World",
    "$text_edit_box_content_binding_name": "$option_binding_name",
    "$text_edit_box_binding_collection_name": "$option_binding_name",
    "$text_edit_box_binding_type": "global",
    "$text_box_enabled_binding_name": "$option_enabled_binding_name",
    "$text_edit_text_control": "display_name",
    "variables": [
      {
        "requires": "(not $option_enabled_binding_name)",
        "$text_box_enabled_binding_name": "#not_data_bound",
        "$text_edit_box_enabled_binding_type": "none"
      }
    ],
    "$text_box_enabled_binding_name|default": "#text_box_enabled",
    "$text_edit_box_enabled_binding_type|default": "global",
    "$text_edit_box_grid_collection_name|default": "",
    "$deselectable_binding_type|default": "none",
    "$deselectable_binding_name|default": "#can_be_deselected",
    "$text_edit_box_focusable_binding_name|default": "#text_edit_box_focusable",
    "$text_edit_visible_binding_name|default": "#text_edit_box_visible",
    "$text_edit_visible_binding_collection_name|default": "",
    "$text_edit_visible_binding_type|default": "none",
    "bindings": [
      {
        "binding_type": "$text_edit_box_enabled_binding_type",
        "binding_collection_name": "$text_edit_box_grid_collection_name",
        "binding_name": "$text_box_enabled_binding_name",
        "binding_name_override": "#enabled"
      },
      {
        "binding_type": "$deselectable_binding_type",
        "binding_name": "$deselectable_binding_name",
        "binding_name_override": "#can_be_deselected"
      },
      {
        "binding_type": "none",
        "binding_name": "$text_edit_box_focusable_binding_name",
        "binding_name_override": "#focus_enabled"
      },
      {
        "binding_name": "$text_edit_visible_binding_name",
        "binding_name_override": "#visible",
        "binding_type": "$text_edit_visible_binding_type",
        "binding_collection_name": "$text_edit_visible_binding_collection_name"
      }
    ],
    "$text_indent_offset": [4, 0],
    "controls": [
      { "@text_box_ui.text_box_text_content_panel": {} }
    ]
  },

  "game_mode_panel@switch_option_ui.switch_option_panel": {
    "size": [150, 20],
    "$option_enabled_binding_name": "#world_game_mode_dropdown_enabled",
    "$switch_option_label": "selectWorld.gameMode",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "survival@switch_option_ui.switch_option": {
          "$option_action_text": "selectWorld.gameMode.survival",
          "$this_action": "#world_game_mode_radio_survival",
          "$next_action": "#world_game_mode_radio_creative"
        }
      },
      {
        "creative@switch_option_ui.switch_option": {
          "$option_action_text": "selectWorld.gameMode.creative",
          "$this_action": "#world_game_mode_radio_creative",
          "$next_action": "#world_game_mode_radio_survival"
        }
      }
    ]
  },

  "gamemode_info_panel": {
    "type": "stack_panel",
    "size": [310, "100%c"],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "survival@world_create_ui.gamemode_info": {
          "$game_mode_name": "survival",
          "$visible": "#world_game_mode_radio_survival"
        }
      },
      {
        "creative@world_create_ui.gamemode_info": {
          "$game_mode_name": "creative",
          "$visible": "#world_game_mode_radio_creative"
        }
      }
    ]
  },

  "gamemode_info": {
    "type": "stack_panel",
    "size": [310, "100%c"],
    "$visible|default": "",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "bindings": [
      {
        "binding_name": "$visible",
        "binding_name_override": "#visible"
      }
    ],
    "layer": 10,
    "controls": [
      {
        "first_line@world_create_ui.info_line_panel": {
          "$text": "('selectWorld.gameMode.' + $game_mode_name + '.line1')"
        }
      },
      { "space@screen_ui.vspace": { "size": [0, 2] } },
      {
        "second_line@world_create_ui.info_line_panel": {
          "$text": "('selectWorld.gameMode.' + $game_mode_name + '.line2')"
        }
      }
    ]
  },
   
  "info_line_panel": {
    "type": "panel",
    "size": [310, "10px"],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "info_line": {
          "type": "label",
          "text": "$text",
          "offset": [5, 0],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "color": "$header_information_text_color",
          "shadow": true,
          "text_alignment": "left"
        }
      }
    ]
  },
  
  "gamerules_button@toggle_button_ui.toggle_button": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "$toggle_button_name": "gamerules",
    "$toggle_index": 1,
    "$toggle_button_text": "selectWorld.gameRules",
    "$toggle_control_name": "gamerules_view"
  },
  
  "more_create_options_button@toggle_button_ui.toggle_button": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "$toggle_button_name": "more_create_options",
    "$toggle_index": 2,
    "$toggle_button_text": "selectWorld.moreWorldOptions",
    "$toggle_control_name": "more_create_options_view"
  },

  "resource_packs_button@toggle_button_ui.toggle_button": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "$toggle_button_name": "world_resource_packs",
    "$toggle_index": 3,
    "$toggle_button_text": "menu.resourcepacks",
    "$toggle_control_name": "world_resource_packs_view"
  },

  "behavior_packs_button@toggle_button_ui.toggle_button": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "$toggle_button_name": "world_behavior_packs",
    "$toggle_index": 4,
    "$toggle_button_text": "menu.behaviors",
    "$toggle_control_name": "world_behavior_packs_view"
  },

  "create_world_button@button_ui.action_button": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [150, 20],
    "default_focus_precedence": 1,
    "$button_text": "selectWorld.create",
    "$pressed_button_name": "create_world_button"
  },

  "save_world_name_panel@screen_ui.stack": {
    "size": [202, 9],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "result": {
          "type": "label",
          "size": ["default", 9],
          "text": "selectWorld.resultFolder",
          "color": "$header_information_text_color",
          "shadow": true,
          "layer": 1
        }
      },
      { "world_name@world_create_ui.world_name_boxview": { "offset": [-2, 0] } },
      { "fill@screen_ui.hfill": {} }
    ]
  },
 
  "gamerules_screen@gamerules_ui.gamerules_screen_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "gamerules_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "resource_packs_screen@world_resource_packs_ui.world_resource_packs_screen_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "world_resource_packs_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "behavior_packs_screen@world_behavior_packs_ui.world_behavior_packs_screen_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "world_behavior_packs_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "more_create_options_screen@more_create_options_ui.more_create_options_screen_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "more_create_options_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "back_button@toggle_button_ui.toggle_button": {
    "size": [200, 20],
    "$toggle_index": 0,
    "$toggle_button_text": "gui.done",
    "$cancel_mapping": true,
    "$toggle_control_name": "return"
  }
}