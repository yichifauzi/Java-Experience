{
  "namespace": "hotbar_ui",

  "hotbar_zone_content_panel": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ 180, 50 ],
    "offset": [0, -0.5],
    "controls": [
      {
        "heart_rend@hud.heart_renderer": {
          "offset": [ -1, -38 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left"
        }
      },
      {
        "horse_heart_rend_0@hud.horse_heart_renderer": {
          "offset": [ 180, -54 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "bindings": [
            {
              "binding_name": "#is_creative_mode",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "horse_heart_rend_1@hud.horse_heart_renderer": {
          "offset": [ 180, -48 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "bindings": [
            {
              "binding_name": "#is_not_creative_mode",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "armor_rend@hud.armor_renderer": {
          "offset": [ -1, -38 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left"
        }
      },
      {
        "hunger_rend@hud.hunger_renderer": {
          "offset": [ 180, -38 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left"
        }
      },
      {
        "bubbles_rend_0@hud.bubbles_renderer": {
          "offset": [ 180, -48 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "bindings": [
            {
              "binding_name": "#is_not_riding",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "bubbles_rend_1@hud.bubbles_renderer": {
          "offset": [ 180, -68 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "bindings": [
            {
              "binding_name": "#is_riding",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "horse_jump_rend@hud.horse_jump_renderer": {
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "offset": [ 0, -28 ],
          "layer": 7,
          "bindings": [
            {
              "binding_name": "#is_riding",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      { "texts_panel@hotbar_ui.texts_panel": {} },
      { "xp_bar_and_score_content_panel@hotbar_ui.xp_bar_and_score_content_panel": {} },
      { "hotbar_content_panel@hotbar_ui.hotbar_content_panel": {} }
    ],
    "bindings": [
      {
        "binding_name": "#hud_visible_centered",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "pocket_hotbar_zone_content_panel@hotbar_ui.hotbar_zone_content_panel": {
    "bindings": [
      {
        "binding_name": "#hud_visible_not_centered",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "texts_panel": {
    "type": "panel",
    "size": [ "100%", 10 ],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "controls": [
      {
        "item_text_factory": {
          "size": [ "100%", 10 ],
          "type": "factory",
          "control_ids": {
            "survival_item_text": "@hotbar_ui.survival_item_name_text",
            "survival_item_text_above_interact_button": "@hotbar_ui.survival_above_interact_button_item_text",
            "survival_jukebox_text": "@hotbar_ui.survival_jukebox_popup_text",
            "survival_jukebox_text_above_interact_button": "@hotbar_ui.survival_jukebox_above_interact_button_popup_text",
            "creative_item_text": "@hotbar_ui.creative_item_name_text",
            "create_item_text_above_interact_button": "@hotbar_ui.creative_above_interact_button_item_text",
            "creative_jukebox_text": "@hotbar_ui.creative_jukebox_popup_text",
            "creative_jukebox_text_above_interact_button": "@hotbar_ui.creative_jukebox_above_interact_button_popup_text"
          }
        }
      }
    ]
  },

  /* Xp Bar */

  "xp_bar_and_score_content_panel": {
    "type": "panel",
    "size": [182, 12],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "offset": [0, -24],
    "controls": [
      { "xp_level_panel@hotbar_ui.xp_level_panel": {} },
      { "xp_bar_panel@hotbar_ui.xp_bar_panel": {} }
    ],
    "bindings": [
      {
        "binding_name": "#is_not_creative_mode",
        "binding_name_override": "#visible"
      }
    ]
  },

  "xp_level_panel": { 
    "type": "panel",
    "size": [182, 12],
    "layer": 5,
    "controls": [
      { "xp_level_label@hotbar_ui.xp_level_text": { "color": "$xp_number_text_color", "layer": 5 } },
      { "xp_level_top_shadow@hotbar_ui.xp_level_text": { "offset": [0, -1] } },
      { "xp_level_left_shadow@hotbar_ui.xp_level_text": { "offset": [-1, 0] } },
      { "xp_level_right_shadow@hotbar_ui.xp_level_text": { "offset": [1, 0] } },
      { "xp_level_bottom_shadow@hotbar_ui.xp_level_text": { "offset": [0, 1] } }
    ]
  },

  "xp_level_text": {
    "type": "label",
    "text": "#level_number",
    "color": "$xp_number_border_color",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "bindings": [
      {
        "binding_name": "#level_number",
        "binding_type": "global"
      },
      {
        "binding_name": "#level_number_visible",
        "binding_type": "global",
        "binding_name_override": "#visible"
      }
    ]
  },

  "xp_bar_panel": { 
    "type": "panel",
    "size": [182, 5],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "controls": [
      { "empty_xp_bar@resources.empty_xp_bar": {} },
      { "full_xp_bar@resources.full_xp_bar": { "layer": 3 } }
    ]
  },

  /* Hotbar */

  "hotbar_content_panel": { 
    "type": "panel",
    "size": [182, 22],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "controls": [
      { "left_inv_button_panel@hotbar_ui.left_inv_button_panel": {} },
      { "hotbar_panel@hotbar_ui.hotbar_panel": {} },
      { "right_inv_button_panel@hotbar_ui.right_inv_button_panel": {} }
    ]
  },

  "hotbar_panel": { 
    "type": "panel",
    "size": [182, 22],
    "$show_stack_count_for_all_gamemodes": true,
    "controls": [
      { "hotbar_bg@resources0.hotbar_bg": {} },
      { "hotbar_grid@hotbar_ui.hotbar_grid": {} },
      { "@hotbar_ui.left_inv_button_panel": {} },
      { "@hotbar_ui.right_inv_button_panel": {} }
    ]
  },

  "left_inv_button_panel": { 
    "type": "panel",
    "size": [22, 22],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "offset": [-22, 0],
    "controls": [
      { "inventory@hotbar_ui.hotbar_inventory_button": {} }
    ],
    "bindings": [
      {
        "binding_name": "#hotbar_elipses_left_visible",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "right_inv_button_panel": { 
    "type": "panel",
    "size": [22, 22],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [22, 0],
    "controls": [
      { "inventory@hotbar_ui.hotbar_inventory_button": {} }
    ],
    "bindings": [
      {
        "binding_name": "#hotbar_elipses_right_visible",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "hotbar_grid": {
    "type": "grid",
    "$hotbar_collection_name|default": "hotbar_items",
    "grid_item_template": "hotbar_ui.gui_hotbar_grid_item",
    "grid_dimension_binding": "#hotbar_grid_dimensions",
    "collection_name": "$hotbar_collection_name",
    "layer": 2,
    "bindings": [
      {
        "binding_name": "#hotbar_grid_dimensions",
        "binding_type": "global"
      }
    ]
  },

